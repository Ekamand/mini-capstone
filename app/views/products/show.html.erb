<body>
  <center>
	<div class="container-fluid">  
	  <div class="col-lg-12"> 
		<div class="well">   
		  <div class="item">

		  	<div id="item_title">
				<%= @product.name %>
			</div>
			<br>
			<%= image_tag @product.images.first.photo, :class => "thumbnail" %>

			<div id="item_id">
				Item id: <%= @product.id %>
			</div>
			<br>

			<div id="item_id">
				Supplier: <%= @product.supplier.name %>
			</div>
			<br>

			<center>
				<div id="item_description">
					<%= @product.description %>
				</div>
			</center>
			<br>
			
			<div id="item_total_price"> 
				$<%= @product.price %>
			</div>
			<br>

			<td><a href="/products/<%= @product.id %>/edit" class="btn btn-info" role="button">Edit item</a></td>
			<td><%= link_to "delete item", "/products/#{@product.id}", :class => 'btn btn-danger', method: :delete %></td>
		  
		  </div>
		</div>
	  </div>
	</div>
  </center>
</body>