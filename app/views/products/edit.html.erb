<body>
    <!--  -->
      <div class="container, control-label col-sm-12">
      <div class="col-lg-12"> 
      <div class="well">   
      <div class="item">
<center><h1> Edit Item </h1></center>

 <%= form_tag "/products/#{@product.id}", method: :patch do %>
 	<div class="form-group">
    <label class="control-label col-sm-3">Item Name:</label>
       <div class="col-sm-9">
         <input type="text" class="form-control" placeholder="Item Name" name="input_name" value = "<%= @product.name %>"><br>
       </div>
  </div>

    <div class="form-group">
      <label class="control-label col-sm-3">Description</label>
        <div class="col-sm-9">
          <textarea type="text" class="form-control" rows="5" placeholder="Item Description" name="input_description" rows="5"><%=@product.description%> </textarea>
          <br>
        </div>
    </div>
                
    <div class="form-group">
      <label class="control-label col-sm-3">Price:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" placeholder="Item Price" name="input_price" value = "<%= @product.price %>"><br>
        </div>
    </div>



    <div class="form-group">
      <label class="control-label col-sm-3">1st Image source:</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" placeholder="Image Source URL" name="input_image" value = "<%= @product.images.first.photo %>"><br>
        </div>
    </div>

	<center><input type="submit" value ="Update" class="btn btn-info" data-toggle="modal"></center>
	

<% end %>
</center>
</div>
</div>
</div>
</div>
</body>