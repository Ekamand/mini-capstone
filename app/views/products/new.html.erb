 <center><h1>add products</h1></center>
 <%= form_tag "/products", method: :post do %>

                <div class="form-group">
                  <label class="control-label col-sm-3">Item Name:</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" placeholder="Item Name" name="input_name" 
                    required ><br>
                  </div>
                </div>
                    <div class="form-group">
                  <label class="control-label col-sm-3">Description</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" placeholder="Item Description" name="input_description" 
                    required><br>
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-3">Price:</label>
                  <div class="col-sm-9">          
                    <input type="text" class="form-control" placeholder="Item Price" name="input_price"
                    required><br>
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-3">Image source:</label>
                  <div class="col-sm-9">          
                    <input type="text" class="form-control" placeholder="Image Source" name="input_image">
                  <br></div>
                </div>
                <center><input type="submit" class="btn btn-info" value ="Add Item" ></center>

 <% end %>
