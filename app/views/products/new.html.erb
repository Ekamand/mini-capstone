   
 




      <div class="container, control-label col-sm-12">
      <div class="col-lg-12"> 
      <div class="well">   
      <div class="item">

      <% if @product.errors.any? %>
      <div>
      <%= pluralize(@product.errors.count, "error") %>
      <ul>
       <% @product.errors.full_messages.each do |error| %>
      <li> <%= error %></li>

  <% end %> 
  </ul>
  </div>
  <% end %>

 <center><h2 class="page_title">add products</h2></center>
 <%= form_tag "/products", method: :post do %>

                <div class="form-group">
                  <label class="control-label col-sm-3">Item Name:</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= @product.name %>" name="input_name" 
                     ><br>
                  </div>
                </div>
                    <div class="form-group">
                  <label class="control-label col-sm-3">Description</label>
                  <div class="col-sm-9">

                    <textarea type="text" class="form-control" value="<%= @product.description %>" name="input_description" rows="5"
                    ></textarea><br>
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-3">Price:</label>
                  <div class="col-sm-9">          
                    <input type="text" class="form-control" value="<%= @product.price %>" name="input_price"
                    ><br>
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-3">Image source:</label>
                  <div class="col-sm-9">          
                    <input type="text" class="form-control" placeholder="Image Source URL" name="input_image">
                  <br></div>
                </div>

                                <div class="form-group">
                  <label class="control-label col-sm-3">Supplier id:</label>
                  <div class="col-sm-9">          
                    <input type="text" class="form-control" placeholder=" @products.supplier.id" name="input_supplier_id">
                  <br></div>
                </div>

                                                <div class="form-group">
                  <label class="control-label col-sm-3">User id:</label>
                  <div class="col-sm-9">          
                    <input type="text" class="form-control" placeholder=" @products.supplier.id" name="user_id">
                  <br></div>
                </div>
                <center><input type="submit" class="btn btn-info" value ="Add Item" ></center>

 <% end %>
    </div>
    </div>
    </div>
    </div>
  <!-- </center> -->
</body>


